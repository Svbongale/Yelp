<%- include("../partials/header") %>


<div class="container"> 
  <div class="card mb-3">
    <img src="<%= campground.image %>" class="card-img-top" alt="Image here" style="width: 500px; height: 400px;">
    <div class="card-body">
      <h5 class="card-title"><%= campground.name %></h5>
      <p class="card-text"><%= campground.description %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      <p><a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Comment</a></p>
      <ul class="list-group list-group-flush">
        <% campground.comments.forEach(function(comment){ %>
            <li class="list-group-item"> <strong><%= comment.author %></strong> - <%= comment.text %></li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>





<%- include("../partials/footer") %>