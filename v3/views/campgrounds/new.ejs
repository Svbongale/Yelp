<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; color: aqua;">Create a new Campground </h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="description" cols="40" rows="10"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds" style="color: rgb(26, 23, 11);" class="btn btn-xl">Go Back...</a>
        </div>
    </div>
</div>


<%- include('../partials/footer') %>