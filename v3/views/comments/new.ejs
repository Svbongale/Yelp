<%- include("../partials/header") %>


<div class="container">
	
  <h1 style="text-align: center;">
	Add a new Comment to <%= campground.name %>
  </h1>

    <div style="width: 30%; margin:30px auto;">
       <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
	     <div class="form-group">
	      <input type="text" class="form-control" placeholder="Comment here" name="comment[text]">
	    </div>
	    <div class="form-group">
	     <input type="text" class="form-control" placeholder="Author" name="comment[author]">
	    </div>
        <div class="form-group"> 
	     <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
       </form>
       <a href="/campgrounds">Back</a>
    </div>
</div>

<%- include("../partials/footer") %>