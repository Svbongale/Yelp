<%- include("partials/header") %>

<div class="container">
<header class="jumbotron">
	<h1>
	This is the campgrounds Page!
</h1>
	<p>
		View the most handpicked campgrounds from across the world!!!!
	</p>
	<p>
		<a href="/campgrounds/new"><button class="btn btn-primary btn-large">Add new Campground
			</button></a>
	</p>
</header>
</div>	

<div class="container">
<div class="row">
	<div class="col-lg-12">
			<h3 style="padding-left:50px">The most popular site for campgrounds.</h3>
	</div>
</div>
</div>

<!-- generate images -->
<div class="container">

<div class="row" style="display:flex; flex-wrap:wrap" >
	
<% for(var i=0;i<campgrounds.length;i++){ %>

	<div class="col-md-3 col-sm-6" style="padding:50px">
		<div class="thumbnail">
		
		<div style="padding-left:50px">
			<h4 style="padding-left:50px">
				<%= campgrounds[i].name %>
			</h4>
	    </div>
		<img src="<%= campgrounds[i].image %>" style="border:2px solid grey;">
		
		</div>	
    </div>
	
<% } %>

</div>

</div>
<%- include("partials/footer") %>